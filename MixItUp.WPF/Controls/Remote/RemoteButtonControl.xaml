<UserControl x:Class="MixItUp.WPF.Controls.Remote.RemoteButtonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:CommandControls="clr-namespace:MixItUp.WPF.Controls.Command"
             xmlns:MaterialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Border BorderThickness="1" BorderBrush="{StaticResource PrimaryHueMidBrush}">
        <Grid>
            <Grid x:Name="ButtonRenderGrid" MouseLeftButtonUp="ButtonRenderGrid_MouseLeftButtonUp">
                <Rectangle x:Name="BackgroundColor" Visibility="Collapsed" />
                <TextBlock x:Name="NameTextBlock" HorizontalAlignment="Center" VerticalAlignment="Center" />
            </Grid>

            <Button x:Name="AddCommandButton" Click="AddCommandButton_Click" Width="60">Add</Button>
        </Grid>
    </Border>
</UserControl>
