<UserControl x:Class="MixItUp.WPF.Controls.Actions.ActionContainerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MixItUp.WPF.Controls.Actions"
             xmlns:Controls="clr-namespace:MixItUp.WPF.Controls"
             xmlns:MaterialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Card.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.TextBox.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="LabelHeaderTextBox" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignTextBox}">
                <Setter Property="Background" Value="{StaticResource PrimaryHueDarkBrush}" />
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Border Style="{StaticResource DefaultBorder}" BorderBrush="{StaticResource MaterialDesignBody}">
        <Controls:AccordianGroupBoxControl x:Name="ActionContainer" Maximized="AccordianGroupBoxControl_Maximized" Minimized="AccordianGroupBoxControl_Minimized">
            <Controls:AccordianGroupBoxControl.Header>
                <Grid Background="Transparent">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" x:Uid="GroupBoxHeaderTextBlock" Foreground="{StaticResource WhiteColor}" Style="{StaticResource HeaderTextBlock}" Visibility="Collapsed" />
                    <TextBox Grid.Column="0" x:Uid="GroupBoxHeaderTextBox" Foreground="{StaticResource WhiteColor}" Width="150" Visibility="Visible" TextChanged="GroupBoxHeaderTextBox_TextChanged" Style="{StaticResource LabelHeaderTextBox}" />

                    <Rectangle Grid.Column="1" Fill="{StaticResource PrimaryHueMidBrush}" Margin="0,-10" />

                    <Button Grid.Column="2" Margin="-10" Content="{MaterialDesign:PackIcon Play}" Click="PlayActionButton_Click" ToolTip="Play" />

                    <Button Grid.Column="4" Margin="-10" Content="{MaterialDesign:PackIcon ArrowUpBold}" Click="MoveUpActionButton_Click" ToolTip="Move Up" />
                    <Button Grid.Column="6" Margin="-10" Content="{MaterialDesign:PackIcon ArrowDownBold}" Click="MoveDownActionButton_Click" ToolTip="Move Down" />

                    <Button Grid.Column="8" Margin="-10" Content="{MaterialDesign:PackIcon ContentCopy}" Click="ActionDuplicateButton_Click" ToolTip="Duplicate" />

                    <Button Grid.Column="10" Margin="-10" Content="{MaterialDesign:PackIcon Help}" Click="ActionHelpButton_Click" ToolTip="Help" />

                    <Button Grid.Column="12" Margin="-10" Content="{MaterialDesign:PackIcon Delete}" Click="DeleteActionButton_Click" ToolTip="Delete" />
                </Grid>
            </Controls:AccordianGroupBoxControl.Header>

            <ContentControl x:Uid="ActionControlContentControl" Margin="10" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" />

        </Controls:AccordianGroupBoxControl>
    </Border>
</UserControl>
